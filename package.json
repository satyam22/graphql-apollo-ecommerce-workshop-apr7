{
  "name": "graphql-apollo-chat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.1",
    "apollo-link-http": "^1.5.3",
    "apollo-link-state": "^0.4.1",
    "apollo-link-ws": "^1.0.7",
    "apollo-server-express": "^1.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0",
    "classnames": "^2.2.5",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.12.0",
    "mongoose": "^4.13.6",
    "react": "^16.0.0",
    "react-apollo": "^2.1.2",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "reactstrap": "^5.0.0-beta.3",
    "subscriptions-transport-ws": "^0.9.7",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.3",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.5",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "server": "run-p server:build server:start",
    "server:build":
      "babel --presets=es2015,stage-0,react ./src/server --out-dir ./lib/server --watch",
    "server:start": "nodemon ./src/server/index.js --exec babel-node",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "proxy": {
    "/graphql": {
      "target": "http://localhost:8000"
    },
    "/graphiql": {
      "target": "http://localhost:8000"
    },
    "/subscriptions": {
      "target": "ws://localhost:8000",
      "ws": true
    }
  }
}
